rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow authenticated users to upload/download anything
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
                     request.resource.size < 100 * 1024 * 1024; // 100MB max
    }
  }
}
