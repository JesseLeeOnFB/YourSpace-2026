rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isUnderSizeLimit() {
      return request.resource.size < 100 * 1024 * 1024;
    }
    
    match /profilePictures/{userId}/{fileName} {
      allow read: if true;
      allow write: if isSignedIn() && 
        request.auth.uid == userId && 
        isUnderSizeLimit();
      allow delete: if isSignedIn() && request.auth.uid == userId;
    }
    
    match /posts/{fileName} {
      allow read: if true;
      allow write: if isSignedIn() && isUnderSizeLimit();
      allow delete: if isSignedIn();
    }
    
    match /messages/{conversationId}/{fileName} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && isUnderSizeLimit();
      allow delete: if isSignedIn();
    }
    
    match /promotions/{fileName} {
      allow read: if true;
      allow write: if isSignedIn() && isUnderSizeLimit();
      allow delete: if isSignedIn();
    }
    
    match /photoAlbums/{userId}/{fileName} {
      allow read: if true;
      allow write: if isSignedIn() && 
        request.auth.uid == userId && 
        isUnderSizeLimit();
      allow delete: if isSignedIn() && request.auth.uid == userId;
    }
  }
}
